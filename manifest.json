{
  "manifest_version": 2,
  "name": "Librato Browser Extension",
  "short_name": "Librato",
  "version": "1.0.0",
  "author": "Bryan Mikaelian",
  "description": "Shows all your Librato Alerts that are currently triggering.",
  "browser_action": {
    "default_title": "Librato Alerts",
    "default_popup": "dist/popup.html"
  },
  "background": {
    "scripts": ["dist/background.js"]
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "options_ui": {
    "page": "dist/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}
